{
  "name": "picmint",
  "version": "3.0.0",
  "description": "tag based picture management application",
  "author": "yewmint <yewmint@outlook.com>",
  "license": "MIT",
  "main": "app/main.js",
  "private": true,
  "scripts": {
    "lint": "eslint src",
    "clean": "rimraf app/*",
    "build": "yarn run lint && yarn run build:main && yarn run build:renderer",
    "rebuild": "yarn run clean && yarn run build",
    "build:main": "cross-env NODE_ENV=production webpack -p --hide-modules --config config/main.config.production.js",
    "build:renderer": "cross-env NODE_ENV=production webpack -p --hide-modules --config config/renderer.config.production.js",
    "start": "electron .",
    "dev:main": "cross-env NODE_ENV=development webpack --config config/main.config.js",
    "dev:renderer": "cross-env NODE_ENV=development webpack-dev-server --hot --config config/renderer.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yewmint/picmint.git"
  },
  "bugs": {
    "url": "https://github.com/yewmint/picmint/issues"
  },
  "homepage": "https://github.com/yewmint/picmint#readme",
  "keywords": [
    "picture",
    "management",
    "application",
    "tag"
  ],
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "classname": "^0.0.0",
    "immer": "^0.2.2",
    "lodash": "^4.17.4",
    "lowdb": "^1.0.0",
    "popmotion": "^8.1.7",
    "serve": "^6.4.3",
    "vue": "^2.5.13",
    "vuex": "^3.0.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-version-inline": "^1.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "copy-webpack-plugin": "^4.2.3",
    "copyfiles": "^1.2.0",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "electron": "^1.7.9",
    "eslint": "^3.14.1",
    "eslint-plugin-vue": "^4.0.1",
    "file-loader": "^1.1.4",
    "html-webpack-plugin": "^2.30.1",
    "make-dir-webpack-plugin": "^0.1.0",
    "node-sass": "^4.5.3",
    "rimraf": "^2.6.0",
    "sass-loader": "^6.0.6",
    "vue-loader": "^13.0.5",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1"
  },
  "build": {
    "appId": "me.yewmint.picmint",
    "directories": {
      "app": "app",
      "output": "bundle"
    },
    "nodeGypRebuild": false,
    "npmRebuild": true,
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": "x64"
        }
      ]
    },
    "files": "**/*",
    "asar": false
  }
}
