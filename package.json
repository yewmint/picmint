{
  "name": "picmint",
  "version": "2.0.0",
  "description": "tag based picture management application",
  "main": "app/main.js",
  "build": {
    "appId": "me.yewmint.picmint",
    "directories": {
      "app": "app",
      "output": "bundle"
    },
    "nodeGypRebuild": false,
    "npmRebuild": true,
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": "x64"
        }
      ]
    },
    "files": "**/*",
    "asar": false
  },
  "scripts": {
    "start": "electron .",
    "lint": "eslint src",
    "clean": "rimraf dist/*",
    "rebuild": "yarn run clean && yarn run build",
    "build": "yarn run lint && yarn run build:main && yarn run build:renderer",
    "build:main": "cross-env NODE_ENV=production webpack -p --config config/main.config.production.js",
    "dev:main": "cross-env NODE_ENV=development webpack --config config/main.config.js",
    "build:renderer": "cross-env NODE_ENV=production webpack -p --config config/renderer.config.production.js",
    "dev:renderer": "cross-env NODE_ENV=development webpack -w --config config/renderer.config.js",
    "electron:rebuild": "electron-rebuild",
    "pack": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yewmint/picmint.git"
  },
  "keywords": [
    "picture",
    "management",
    "application",
    "tag"
  ],
  "author": "yewmint",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yewmint/picmint/issues"
  },
  "homepage": "https://github.com/yewmint/picmint#readme",
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-version-inline": "^1.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-hyperapp": "^2.3.0",
    "babel-preset-stage-2": "^6.24.1",
    "copy-webpack-plugin": "^4.2.3",
    "copyfiles": "^1.2.0",
    "cross-env": "^3.1.4",
    "electron": "^1.7.9",
    "electron-builder": "^19.49.0",
    "electron-rebuild": "^1.6.0",
    "eslint": "^3.14.1",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "make-dir-webpack-plugin": "^0.1.0",
    "node-gyp": "^3.6.2",
    "parcel-bundler": "^1.4.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "rimraf": "^2.6.0",
    "webpack": "^2.2.0",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "animejs": "^2.2.0",
    "babel-polyfill": "^6.26.0",
    "classname": "^0.0.0",
    "color": "^2.0.1",
    "css-loader": "^0.28.7",
    "eslint-plugin-react": "^7.5.1",
    "hyperapp": "^1.0.1",
    "immutable": "^3.8.2",
    "lodash": "^4.17.4",
    "lowdb": "^1.0.0",
    "node-sass": "^4.7.2",
    "popmotion": "^8.1.7",
    "prop-types": "^15.6.0",
    "sass-loader": "^6.0.6",
    "serve": "^6.4.3",
    "style-loader": "^0.19.1"
  }
}
