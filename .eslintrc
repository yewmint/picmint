{
  "plugins": [
    "vue"
  ],

  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },

  "parser": "babel-eslint",

  "extends": "eslint:recommended",

  "rules": {
    "indent": [ "error", 2 ],
    "quotes": [ 2, "single" ],
    "strict": [ 2, "never" ],
    "semi": [ "error",  "never" ],
    "no-console": 0
  },

  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  }
}
