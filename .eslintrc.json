{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "env": {
        "node": true,
        "es6": true,
        "browser": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "react/jsx-uses-vars": [
            "error"
        ],
        "react/jsx-uses-react": [
            "error"
        ]
    }
}